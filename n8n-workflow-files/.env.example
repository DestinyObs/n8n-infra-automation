
# Environment Configuration

# Copy this file to .env and update with your actual values
# Command: cp env-config.txt .env


# n8n Configuration

N8N_PASSWORD=your_secure_password_here
SERVER_IP=your.server.ip.address


# Database Configuration (Optional - for production HA setup)

POSTGRES_PASSWORD=your_postgres_password
POSTGRES_USER=n8n
POSTGRES_DB=n8n



# Anthropic API Key (REQUIRED for AI analysis)
# Get yours at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS API Gateway Key (REQUIRED for auto-scaling)
# Create an API key in AWS API Gateway console
AWS_API_KEY=your_aws_api_gateway_key_here


# Slack Bot Token (starts with xoxb-)
# Get it from: https://api.slack.com/apps → Your App → OAuth & Permissions
SLACK_TOKEN=xoxb-xxxxxxxxxxxxx-xxxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx

# Slack channel for alerts
SLACK_CHANNEL=#devops-alerts


# AWS Configuration


# AWS Region where your resources are located
AWS_REGION=us-east-1

# Auto Scaling Group name
ASG_NAME=production-asg

# Minimum number of instances (never scale below this)
MIN_INSTANCES=2

# Maximum number of instances (never scale above this)
MAX_INSTANCES=10

# How many instances to add when scaling up
SCALE_UP_AMOUNT=2


# AWS Lambda Configuration


# Lambda function name
LAMBDA_FUNCTION_NAME=auto-scale-handler

# API Gateway URL for Lambda function
# Format: https://[api-id].execute-api.[region].amazonaws.com/[stage]/auto-scale
LAMBDA_API_GATEWAY_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod/auto-scale


# Prometheus Configuration


# Prometheus server URL
PROMETHEUS_URL=http://prometheus:9090

# Alertmanager URL
ALERTMANAGER_URL=http://alertmanager:9093
